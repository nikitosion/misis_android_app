<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day_schedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/day_schedule_item_background"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/day_schedule_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02 декабря, понедельник"
        android:textAllCaps="true"
        android:textColor="@color/darker_grey"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lessons_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        tools:itemCount="3"
        tools:listitem="@layout/lesson_schedule_item" />

</LinearLayout>