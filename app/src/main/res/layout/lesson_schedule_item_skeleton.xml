<?xml version="1.0" encoding="utf-8"?>
<com.faltenreich.skeletonlayout.SkeletonLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/skeleton_layot">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lesson_number"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@color/darker_grey"
                android:gravity="start|center"
                android:textAlignment="center"
                android:textFontWeight="500"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/lesson_type"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@color/darker_grey"/>
        </LinearLayout>

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="10dp"
            android:textFontWeight="700"
            android:background="@color/darker_grey"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/auditorium"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:background="@color/darker_grey"
            android:fontFamily="@font/montserrat"
            android:gravity="start|center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textAlignment="center"
            android:textFontWeight="500"
            android:textSize="12dp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/lessons_divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:dividerColor="@color/divider_grey" />
    </LinearLayout>
</com.faltenreich.skeletonlayout.SkeletonLayout>